{
  "name": "sharespace-infrastructure",
  "version": "0.1.0",
  "description": "ShareSpace - AWS CDK Infrastructure as Code",
  "main": "lib/sharespace-stack.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "synth": "cdk synth",
    "deploy": "cdk deploy --all --require-approval never --force",
    "deploy:dev": "ENVIRONMENT=dev cdk deploy --all --require-approval never --force",
    "deploy:prod": "ENVIRONMENT=prod cdk deploy --all --require-approval never --force",
    "destroy": "cdk destroy --all",
    "diff": "cdk diff",
    "diff:dev": "ENVIRONMENT=dev cdk diff",
    "diff:prod": "ENVIRONMENT=prod cdk diff",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "aws-cdk": "^2.110.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.110.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  }
}
