{
  "name": "sharespace-backend",
  "version": "0.1.0",
  "description": "ShareSpace - Node.js Lambda functions and shared utilities",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "build:lambdas": "tsc && node scripts/bundle-lambdas.js",
    "build:lambda:health": "tsc && node scripts/bundle-lambda.js health",
    "build:lambda:auth": "tsc && node scripts/bundle-lambda.js auth",
    "build:lambda:media": "tsc && node scripts/bundle-lambda.js media",
    "build:lambda:user": "tsc && node scripts/bundle-lambda.js user",
    "test:lambdas": "node --test dist/lambdas/**/*.test.js",
    "deploy": "npm run build:lambdas"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.500.0",
    "@aws-sdk/client-s3": "^3.500.0",
    "@aws-sdk/lib-dynamodb": "^3.500.0",
    "@aws-sdk/s3-request-presigner": "^3.500.0",
    "aws-lambda": "^1.0.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.3.0"
  }
}
